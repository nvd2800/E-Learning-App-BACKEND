{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "useUnknownInCatchVariables": false,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}